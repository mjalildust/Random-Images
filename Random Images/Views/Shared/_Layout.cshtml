<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Random Images", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="nav navbar-nav navbar-right" style="margin-top:6px; margin-right:4px">

                <button class="btn btn-secondary dropdown-toggle glyphicon glyphicon-user" id="drop" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                <ul class="dropdown-menu">
                    <li><a tabindex="-1" href="#">Mahi</a></li>
                    <li><a tabindex="-1" href="#">Julia</a></li>
                    <li><a tabindex="-1" href="#">Elli</a></li>
                    <li><a tabindex="-1" href="#">lili</a></li>
                    <li><a tabindex="-1" href="#">Emily</a></li>
                    <li><a tabindex="-1" href="#">John</a></li>
                    <li><a tabindex="-1" href="#">Mike</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type='text/javascript' src='http://code.jquery.com/jquery-1.11.0.min.js'></script>
    <script type="text/javascript"></script>

</body>


</html>
